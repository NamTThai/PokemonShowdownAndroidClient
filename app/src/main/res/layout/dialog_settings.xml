<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/animation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/animation"
            android:textSize="16sp"
            android:padding="16dp"/>

        <Switch
            android:id="@+id/animation_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/animation_text"
            android:layout_toRightOf="@id/animation_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/advertise_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advertise"
            android:textSize="16sp"
            android:padding="16dp"/>

        <Switch
            android:id="@+id/advertise_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/advertise_text"
            android:layout_toRightOf="@id/advertise_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bugreport_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bug_report"
            android:textSize="16sp"
            android:padding="16dp"/>

        <Switch
            android:id="@+id/bugreport_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/bugreport_text"
            android:layout_toRightOf="@id/bugreport_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>




</LinearLayout>